<div class="post-list">
  <h1 class="title">{{ title }}</h1>
{%- for post in posts %}
  <div class="post-list-item">
    <div class="post-list-item__date">
      {{ post.date | formatDate }}
    </div>
    <div class="post-list-item__title">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </div>
  </div>
{%- endfor %}
</div>
