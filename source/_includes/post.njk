---
layout: base
permalink: "{{ page | blogPermalink }}"
---

<div class="post">
  <div class="post-header">
    <h1 class="title">
      {{ title | insertWbr | safe }}
    </h1>
    <div class="meta">
      <span class="date">{{ page.date | formatDate }}</span>
{%- if tags.length > 0 %}
      - {{ tags | join(", ") }}
{%- endif %}
    </div>
  </div>
  <div class="content">
    <div>
      {{ content | safe }}
    </div>
  </div>
</div>
