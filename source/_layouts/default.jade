doctype html
html
  head
    if title
      title= [title, site.title].join(' - ')
    else if post
      title= [post.title, site.title].join(' - ')
    else
      title= site.title
    meta(charset="utf-8")
    meta(name="viewport" content="initial-scale=1")
    link(rel="icon" sizes="16x16 32x32 48x48" href="/favicon.ico")
    link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Asap:400,700")
    link(rel="stylesheet" href="/css/style.css")
    block head
  body
    header.header
      h1.title
        a(href="/")= site.title
      nav
        ul
          li: a(href="/about") About
          li: a(href="/works") Works
          li: a(href="/blog/archives") Archives

    .main
      block content

    footer.footer
      != '&copy; ' + site.author
