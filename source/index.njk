---
layout: layouts/base
pagination:
  data: collections.posts
  size: 3
  alias: posts
permalink: "{{ pagination | indexPermalink }}"
---

{%- for post in posts %}
<div class="post">
  <div class="post-header">
    <h1 class="title">
      <a href="{{ post.url | url }}">{{ post.data.title | insertWbr | safe}}</a>
    </h1>
    <div class="meta">
      <span class="date">{{ post.date | formatDate }}</span>
{%- for tag in post.data.tags -%}
  {%- if loop.first -%}{{ ' - ' }}{%- endif -%}
  <a href="/blog/tags/{{tag}}">{{ tag }}</a>{%- if not loop.last -%}{{ ', ' }}{%- endif -%}
{%- endfor %}
    </div>
  </div>
  <div class="content">
    <div>
      {{ post.templateContent | safe }}
    </div>
  </div>
</div>
{%- endfor %}

<ul class="pagination">
  <li class="pagination__prev-page">
{%- if pagination.href.previous %}
    <a href="{{pagination.href.previous}}">Newer posts</a>
{%- endif %}
  </li>
  <li class="pagination__next-page">
{%- if pagination.href.next %}
    <a href="{{pagination.href.next}}">Older posts</a>
{%- endif %}
  </li>
</ul>
<nav class="footer-nav">
  <a href="/blog/archives/">All posts</a>
</nav>
